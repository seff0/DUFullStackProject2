<div class="content-contact">
    <form action="mailto:contact@yourdomain.com">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputEmail4">Email</label>
                <input type="email" class="form-control" id="inputEmail4" placeholder="Email">
            </div>
            <div class="form-group col-md-6">
                <label for="inputPassword4">Name</label>
                <input type="password" class="form-control" id="inputPassword4" placeholder="Your name">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputCity">City</label>
                <input type="text" class="form-control" id="inputCity" placeholder="Your city">
            </div>
            <div class="form-group col-md-6">
                <label for="inputState">State</label>
                <select id="inputState" class="form-control">
                    <option selected>Colorado</option>
                    <option>A state that's not Colorado</option>
                </select>
            </div>
            <div class="form-group col-md-12">
                <label for="formGroupExampleInput2">Message</label>
                <input type="text" rows="6" class="form-control" id="formGroupExampleInput2"
                    placeholder="Leave your message here">
                <br>
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </form>
</div>